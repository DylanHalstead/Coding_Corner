<%- include('../partials/header.ejs')%>
<form action="/users" method="POST">
  <div class="new-event-container">
    <h1 class="new-event-header">Sign Up</h1>
    <div class="new-event-field-container">
      <label class="new-event-label" for="title">First Name</label>
      <input class="new-event-field" type="input" name="firstName" id="firstName" required>
    </div>
    <div class="new-event-field-container">
      <label class="new-event-label" for="title">Last Name</label>
      <input class="new-event-field" type="input" name="lastName" id="lastName" required>
    </div>
    <div class="new-event-field-container">
      <label class="new-event-label" for="title">Username</label>
      <input class="new-event-field" type="input" name="username" id="username" required>
    </div>
    <div class="new-event-field-container">
      <label class="new-event-label" for="title">Email Address</label>
      <input class="new-event-field" type="email" name="email" id="email" required>
    </div>
    <div class="new-event-field-container">
      <label class="new-event-label" for="title">Password</label>
      <input class="new-event-field" type="password" name="password" id="password" required>
      <button class="new-event-submit-btn" type="submit">Submit</button>
    </div>
  </div>
</form>
<%- include('../partials/footer.ejs')%>